<form>
    <tab order="0" name="tab1" text="General" layout="insets 20 20 20 20, fillx" col="[left][fill][left][fill]">
        <label order="0" name="label1" text="Country name" constraints=""/>
        <textfield order="1" name="text1" default="" fieldname="CNTRY_NAME" valuetype="string" constraints="growx"/>
        <label order="2" name="label2" text="ISO2" constraints="skip 4"/>
        <combobox order="3" name="combo1" default="" fieldname="ISO_2DIGIT" constraints="growx, wrap">
            <item>RU</item>
            <item>IT</item>
            <item>IS</item>
            <item>UK</item>
        </combobox>
        <label order="4" name="label3" text="Currency" constraints="gap 20"/>
        <combobox order="5" name="combo2" default="Dollar" fieldname="CURR_TYPE" constraints="span, growx, wrap">
            <item>Lira</item>
            <item>Peso</item>
            <item>Dollar</item>
            <item>Franc</item>
        </combobox>
        <combobox order="6" name="combo3" default="USD" fieldname="CURR_CODE" constraints="span, growx">
            <item>Lira, ITL</item>
            <item>Peso, ARP</item>
            <item>Dollar, USD</item>
            <item>Franc, CHF</item>
        </combobox>
    </tab>
    <tab order="1" name="tab2" text="Statistics" layout="insets 20 20 20 20, fillx" col="[left][fill][left][fill]">
        <label order="0" name="label4" text="Population" constraints="gap 10"/>
        <textfield order="1" name="text2" default="" fieldname="POP_CNTRY" valuetype="string" constraints="span,growx, wrap"/>
        <label order="2" name="label5" text="Area" constraints="gap 20"/>
        <separator order="3" orientation="horizontal" constraints="span,growx, wrap"/>
        <label order="5" name="label6" text="km2" constraints="gap 40"/>
        <textfield order="6" name="text3" default="" fieldname="SQKM" valuetype="string" constraints="span,growx, wrap"/>
        <label order="7" name="label7" text="miles" constraints="gap 40"/>
        <textfield order="8" name="text4" default="" fieldname="SQMI" valuetype="string" constraints="span,growx, wrap"/>
        <label order="9" name="label8" text="landlocked" constraints="gap 10"/>
        <radiobutton order="10" name="radio1" default="N" fieldname="LANDLOCKED" constraints="span,growx">
            <item>locked, Y</item>
            <item>not locked, N</item>
        </radiobutton>
    </tab>
</form>


